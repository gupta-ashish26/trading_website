<%- include("partials/header", { title: "Products" }) %>

<section class="home main-content" id="home">
    <div class="content">
        <h3>OurProducts</h3>
        <p> Lorem, ipsum dolor sit amet consectetur adipisicing elit. 
            Numquam cum nam facere? Iusto dicta, nisi veniam molestias voluptas 
            perferendis possimus minus aliquid architecto
            consequatur, provident sed magni odit labore vel.
        </p>
    </div>

</section>
<section>
    <div class="container">
        <div class="row">
            <% products.forEach(function(product, index) { %>
                <div class="col-md-3">
                    <div class="product-card">
                        <img src="<%= product.image %>" class="product-img" alt="<%= product.name %>">
                        <h5 class="product-name"><a href="/product"><%= product.name %></a></h5>
                        <p class="product-description"><%= product.description %></p>
                        <p class="product-price">$<%= product.price %></p>
                    </div>
                </div>
                <% if ((index + 1) % 4 === 0) { %>
                    </div><div class="row">
                <% } %>
            <% }); %>
        </div>
    </div>

</section>

<%- include("partials/footer") %>